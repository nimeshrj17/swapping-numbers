#include<stdio.h>
struct emp{
int eno;
char ename[20];
float esal;
char dept[20];
};
int main(){
int j;
struct emp e;
printf("Enter Employee detail \n");
printf("Emp No. :-\t");
scanf("%d",&e.eno);
printf("Emp Name :-\t");
scanf("%s",&e.ename);
printf("employee department:-\t");
scanf("%s",&e.dept);
printf("Emp salary :-\t");
scanf("%f",&e.esal);
printf("\n \n");
printf("Enter 1 to print");
scanf("%d",&j);
if(j==1){
printf("Employee details are \n \n Employee name:- \t %s \n Employee number:- \t %d \n Employee salary:- \t %f \n Employee department :- \t %s \n ",e.ename,e.eno,e.esal,e.dept);
}
else
return 0;
}
